class Solution {
    //Two Pointers
    //left = 0; right = numbers.length -1;
    // sum left[i] + right[i]
    // if sum > target, right--
    // if sum < target, left ++;
    // if sum == target, return true
    // if left < right, and sum never equals target, return false
    public int[] twoSum(int[] numbers, int target) {
        int left = 0;
        int right = numbers.length - 1;
        
        while ( left < right) {
            int sum = numbers[left] + numbers[right];

            if(sum > target) {
                right--;
            } else if (sum < target) {
                left++;
            } else {
                if( sum == target) {
                    return new int [] {left + 1, right + 1};
                }
            }
        }
        return null;
    }
}
